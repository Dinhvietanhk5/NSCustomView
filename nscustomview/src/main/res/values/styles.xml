<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextBlueCaps" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension" />
        <attr name="sl_shadowRadius" format="dimension" />
        <attr name="sl_shadowColor" format="color" />
        <attr name="sl_dx" format="dimension" />
        <attr name="sl_dy" format="dimension" />
        //tv
        <attr name="background_tv" format="reference|color" />
        <attr name="android:gravity" />
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textAllCaps" />
        <attr name="android:textStyle" />
        <attr name="tv_padding" format="dimension" />
        <attr name="tv_paddingVertical" format="dimension" />
        <attr name="tv_paddingHorizontal" format="dimension" />
        <attr name="tv_paddingEnd" format="dimension" />
        <attr name="tv_paddingTop" format="dimension" />
        <attr name="tv_paddingStart" format="dimension" />
        <attr name="tv_paddingBottom" format="dimension" />
    </declare-styleable>

    <style name="MyDialog2" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">#00000000</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TextBlackBr" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBlack" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextWhite" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextWhiteBr" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/robotomedium</item>
    </style>

    <style name="TextWhiteCaps" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
